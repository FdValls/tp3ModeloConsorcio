<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_start">

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.projectchantadmin.fragments.fragment_login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/fragment_start"
        android:name="com.example.projectchantadmin.fragments.Fragment_start"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_fragment_start_to_fragment_login"
            app:destination="@id/fragment_login"
            app:popUpTo="@id/fragment_login"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_fragment_start_to_fragment_main"
            app:destination="@id/fragment_main"
            app:popUpTo="@id/fragment_start"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment_main"
        android:name="com.example.projectchantadmin.fragments.fragment_main"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>